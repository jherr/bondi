{
  "name": "Start Template",
  "description": "Sets up basic project structure for TanStack Start",
  "version": 1,
  "phases": [
    {
      "name": "Configure Application",
      "steps": [
        {
          "action": "copy-files",
          "files": ["assets:tsconfig.json"]
        },
        {
          "action": "add-dependencies",
          "packages": {
            "@tanstack/start": "^1.99.8",
            "@tanstack/react-router": "^1.99.8",
            "vinxi": "^0.5.1",
            "react": "^19.0.0",
            "react-dom": "^19.0.0"
          }
        },
        {
          "action": "add-dev-dependencies",
          "packages": {
            "@vitejs/plugin-react": "^4.3.4",
            "vite-tsconfig-paths": "^5.1.4",
            "typescript": "^5.7.3",
            "@types/react": "^19.0.0",
            "@types/react-dom": "^19.0.0"
          }
        },
        {
          "action": "update-package-json",
          "content": {
            "type": "module",
            "scripts": {
              "dev": "vinxi dev",
              "build": "vinxi build",
              "start": "vinxi start"
            }
          }
        },
        {
          "action": "copy-files",
          "files": ["assets:app.config.ts"]
        }
      ]
    },
    {
      "name": "Build Application",
      "steps": [
        {
          "action": "copy-files",
          "files": [
            "assets:app/client.tsx",
            "assets:app/router.tsx",
            "assets:app/ssr.ts",
            "assets:app/routes/index.tsx",
            "assets:app/routes/__root.tsx"
          ]
        }
      ]
    }
  ]
}
